<h1>Posts</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Location</th>
    <th>Cost</th>
    <th>Size</th>
    <th>Weight</th>
    <th>Category</th>
    <th>Owner</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.name %></td>
    <td><%= post.description %></td>
    <td><%= post.location %></td>
    <td><%= post.cost %></td>
    <td><%= post.size %></td>
    <td><%= post.weight %></td>
    <td><%= post.category %></td>
    <td><%= post.owner %></td>
    <td><%= link_to 'View', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Delete', post, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Create new post', new_post_path %>
